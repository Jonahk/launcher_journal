<%= form_for(@entry) do |f| %>
  <% if @entry.errors.any? %>
    <p>You are wrong. Do it correctly.</p>
    <p><a href="/entries/new">Back to new.</a></p>
  <% else %>
    <div>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
    <div>
      <%= f.label :body %><br>
      <%= f.text_area :body %>
    </div>
    <div>
      <%= f.submit %>
    </div>
  <% end %>
<% end %>
